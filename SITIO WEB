[5:01 p.¬†m., 4/3/2025] Dilan Galindo: // Funci√≥n para cambiar el color de fondo
function cambiarColor() {
    let colores = ["#f4f4f4", "#ffdd57", "#ff8888", "#88ff88", "#8888ff"];
    document.body.style.backgroundColor = colores[Math.floor(Math.random() * colores.length)];
}

// Manejar el formulario de inscripci√≥n
